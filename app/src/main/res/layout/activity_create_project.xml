<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로젝트 등록"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- 프로젝트 제목 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로젝트 제목 *"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/editTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="프로젝트 제목을 입력하세요"
            android:minHeight="48dp"/>

        <!-- 프로젝트 설명 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로젝트 설명 *"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/editDescription"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top"
            android:hint="프로젝트에 대해 설명해주세요"
            android:inputType="textMultiLine"/>

        <!-- 필요한 역할 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="필요한 역할 * (다중 선택)"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <GridView
            android:id="@+id/gridRoles"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:numColumns="3"
            android:verticalSpacing="8dp"
            android:horizontalSpacing="8dp"
            android:layout_marginTop="8dp"/>

        <!-- 필요한 기술 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="필요한 기술 스택 (선택)"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <GridView
            android:id="@+id/gridSkills"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:numColumns="3"
            android:verticalSpacing="8dp"
            android:horizontalSpacing="8dp"
            android:layout_marginTop="8dp"/>

        <!-- 모집 인원 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모집 인원 *"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/editMaxMembers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="예: 4"
            android:inputType="number"
            android:minHeight="48dp"/>

        <!-- 프로젝트 기간 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로젝트 기간 *"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/editDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="예: 3개월"
            android:minHeight="48dp"/>

        <!-- 등록 버튼 -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="프로젝트 등록"
            android:layout_marginTop="24dp"/>

    </LinearLayout>

</ScrollView>
