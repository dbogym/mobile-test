<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로젝트 제목 *"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="프로젝트 제목"
            android:minHeight="48dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로젝트 설명 *"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editDescription"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top"
            android:hint="프로젝트 설명"
            android:inputType="textMultiLine"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="필요한 역할 * (다중 선택)"
            android:textStyle="bold"/>

        <GridView
            android:id="@+id/gridRoles"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:numColumns="3"
            android:verticalSpacing="8dp"
            android:horizontalSpacing="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="필요한 기술 스택 (선택)"
            android:textStyle="bold"/>

        <GridView
            android:id="@+id/gridSkills"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:numColumns="3"
            android:verticalSpacing="8dp"
            android:horizontalSpacing="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모집 인원 *"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editMaxMembers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="예: 4"
            android:inputType="number"
            android:minHeight="48dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로젝트 기간 *"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="예: 3개월"
            android:minHeight="48dp"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

</ScrollView>