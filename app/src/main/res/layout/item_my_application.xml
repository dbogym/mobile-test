<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textApplicationProject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="프로젝트 제목"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textApplicationStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대기중"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textSize="12sp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textApplicationRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지원 역할: 프론트엔드"
        android:textSize="14sp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/textApplicationMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="지원 메시지"
        android:textSize="14sp"
        android:padding="8dp"
        android:background="#F5F5F5"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/textApplicationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지원일: 11/30 14:30"
        android:textSize="11sp"
        android:textColor="#9E9E9E"
        android:layout_marginTop="4dp"/>

</LinearLayout>
